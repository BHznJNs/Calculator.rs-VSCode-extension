{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Calculator.rs",
	"scopeName": "source.calcrs",
	"fileTypes": ["calcrs"],
	"patterns": [
		{"include": "#keywords"},
		{"include": "#types"},
		{"include": "#function"},
		{"include": "#variable"},
		{"include": "#number"},
		{"include": "#comment"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control",
				"match": "(out|for|if|ctn|brk|fn|import|cls|new)\\s"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.name.type",
				"match": "\\$(_|num|str|arr|lexpr|func)"
			}]
		},
		"function": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "([_a-zA-Z][_a-zA-Z0-9]*)(?=\\()"
			}]
		},
		"variable": {
			"patterns": [{
				"name": "variable",
				"match": "[_a-zA-Z][_a-zA-Z0-9]*"
			}]
		},
		"number": {
			"patterns": [
				{
					"name": "constant.numeric.float",
					"match": "^(-?\\d+)(\\.\\d+)?$"
				},
				{
					"name": "constant.numeric.integer",
					"match": "-?[0-9]+"
				}
			]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line",
				"match": "#.*$"
			}]
		}
	}
}